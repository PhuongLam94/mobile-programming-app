<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:id="@+id/imgAvaProc"
            android:src="@drawable/loading_spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nameProfile"
            android:layout_marginTop="40dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailProc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/genderProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/nameProfile"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/birthdayProc"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_column="3"
            android:layout_below="@+id/genderProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/mobileProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/birthdayProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/addressProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/mobileProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/heightProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/addressProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/weightProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/heightProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/emailProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/weightProc"
            android:layout_toLeftOf="@+id/nfBtnProc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to see all pictures"
            android:textSize="20sp"
            android:id="@+id/pictureProc"
            android:layout_column="3"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/textView12"
            android:layout_toLeftOf="@+id/nfBtnProc" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn1Proc"
            android:layout_column="3"
            android:layout_marginBottom="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to my profile"
            android:id="@+id/btn2Proc"
            android:layout_alignTop="@+id/btn1Proc"
            android:layout_toEndOf="@+id/emailProc" />

        <Button
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btn3Proc"
            android:layout_alignBottom="@+id/btn2Proc"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/pictureProc" />
    </LinearLayout>

</LinearLayout>